<script>
$(function() {
  $('#user_avatar').on('change', function(event) {
    var files = event.target.files;
    var image = files[0]
    var reader = new FileReader();
    reader.onload = function(file) {
      var img = new Image();
      console.log(file);
      img.src = file.target.result;
      img.width = 100;
      $('#image-target').html(img);
      $('#upload-image-text').text('Change image');
    }
    reader.readAsDataURL(image);
    console.log(files);
  });
});
</script>

<h2>Edit Profile</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>

  <div class="form-group">
    <div id="image-target"><%= image_tag(current_user.avatar.url(:thumb)) %></div>
    <span class="btn btn-default btn-file">
    <span id="upload-image-text">Upload image</span> <%= f.file_field :avatar, accept: "image/*;capture=camera" %> 
    </span>
  </div>

  <div class="form-group">
    <%= f.text_field :first_name, placeholder: "First Name", autofocus: true %>
  </div>
  <div class="form-group">
    <%= f.text_field :last_name, placeholder: "Last Name" %>
  </div>

  <div class="form-group">
    <%= f.email_field :email, placeholder: "Email" %>
  </div>

  <!-- TODO: 
    1. bootstrap col-xs- sucks on mobile => replace them with better styling
  -->

  <div style="margin-bottom: 70px;">
  <div class="col-xs-2 zip">
    <div class="form-group">
      <%= f.text_field :zip, class: 'form-control', placeholder: "Zip Code", required: true %>
        <% @zip_code = f.object.zip %>
        <% if !@zip_code.nil? && @zip_code != "" %>
          <%= @zip_code.to_s.to_region %>
        <% end %>
    </div>
  </div>
  
  <div class="col-xs-2 country">
    <div class="form-group">
      <%= f.text_field :country, list: 'country-list', class: 'form-control', placeholder: "United States" %>
    </div>
      <datalist id="country-list">
        <select>
          <option value="United States"></option>
          <option value="United Kingdom"></option>
          <option value="India"></option>
        </select>
      </datalist>
    </div>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <!-- create a separate link for this later
  <div class="form-group">
    <%= f.password_field :password, placeholder: "New Password", autocomplete: "off" %>
  </div>
  -->

  <% if f.object.password_required? %>
    <div class="form-group">
      <%= f.password_field :password_confirmation, placeholder: "Confirm Password", autocomplete: "off" %>
    </div>

    <div class="form-group">
      <%= f.password_field :current_password, placeholder: "Current Password", autocomplete: "off" %>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.submit "Update" %>
  </div>
<% end %>

